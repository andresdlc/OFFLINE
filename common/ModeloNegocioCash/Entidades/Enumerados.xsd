    </simpleType>

    <simpleType name="TipoPertenenciaTarjeta">
       <restriction base="string">
        <enumeration value="TITULAR"/>
        <enumeration value="ADICIONALES"/>
        <enumeration value="TODOS"/>
       </restriction>
      </simpleType>
      
      <simpleType name="TipoIdentificacionPersona">
       <restriction base="string">
        <enumeration value="C"/>    <!-- CEDULA -->
        <enumeration value="R"/>    <!-- RUC -->
        <enumeration value="P"/>    <!-- PASAPORTE -->
        <enumeration value="O"/>    <!-- OTROS  -->
       </restriction>
      </simpleType>
      
      <simpleType name="TipoCuenta">
       <restriction base="string">
        <enumeration value="AHO"/>    <!-- AHORRO -->
        <enumeration value="CTE"/>    <!-- CORRIENTE -->
        <enumeration value="VIR"/>    <!-- VIRTUAL -->        
        <enumeration value="CTB"/>    <!-- CONTABLE -->
        <enumeration value="ESP"/>    <!-- ESPECIAL -->        
        <enumeration value="BAS"/>    <!-- BASICA -->        
       </restriction>
      </simpleType>
	  
	  <simpleType name="Subproducto">
       <restriction base="string">
        <enumeration value="BAS"/>    <!-- BASICA -->        
       </restriction>
      </simpleType>

	  <simpleType name="TipoDireccion">
       <restriction base="string">
        <enumeration value="D"/>
		<enumeration value="T"/>
		<enumeration value="E"/>
       </restriction>
      </simpleType>

	  <simpleType name="TipoTelefono">
       <restriction base="string">
        <enumeration value="M"/>
		<enumeration value="T"/>
