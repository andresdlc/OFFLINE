<?xml version="1.0" encoding="UTF-8"?>
<schema targetNamespace="http://www.bolivariano.com/Enumerados" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://www.bolivariano.com/Enumerados">

    <!--    definicion de enumeraciones y restricciones -->
    
    <simpleType name="TipoComprobanteElectronico">
      <restriction base="string">
        <enumeration value="FACTURA"/>
